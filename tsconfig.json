{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "noImplicitAny": false,
      "allowJs":true,
      "moduleResolution": "node",
      "sourceMap": true,
      "resolveJsonModule": true,
      "outDir": "dist",  // TS文件编译后会放入到此文件夹内
      "baseUrl": ".",
      "paths": {
          "*": [
              "*"
          ]
      }
  },
  "exclude": [
      "node_modules",
      "docs",
      "dist"
  ]
}